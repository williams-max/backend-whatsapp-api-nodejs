{
    "root": true,
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "es2021": true,
        "node": true
    },
    "rules": {
        "no-console": "warn",
        "no-undefined": "warn",
        "no-unused-vars": "warn"
    },
    "globals": {
        "WhatsAppInstances": true,
        "describe": true,
        "it": true
    }
}
